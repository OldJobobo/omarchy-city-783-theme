{
  "layer": "top",
  "position": "top",
  "height": 38,
  "margin": 0,
  "spacing": 0,
  "modules-left": ["custom/omarchy", "group/left-ws"],
  "modules-center": ["idle_inhibitor", "clock", "custom/update", "custom/voxtype", "custom/screenrecording-indicator"],
  "modules-right": ["group/right-ws", "custom/net-gap", "network", "bluetooth", "pulseaudio", "group/system-stats"],
  "custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>",
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },
  "custom/update": {
    "format": "",
    "exec": "omarchy-update-available",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "tooltip-format": "Omarchy update available",
    "signal": 7,
    "interval": 21600
  },
  "custom/voxtype": {
    "exec": "omarchy-voxtype-status",
    "return-type": "json",
    "format": "{icon}",
    "format-icons": {
      "idle": "",
      "recording": "󰍬",
      "transcribing": "󰔟"
    },
    "tooltip": true,
    "on-click-right": "omarchy-voxtype-config",
    "on-click": "omarchy-voxtype-model"
  },
  "group/left-ws": {
    "modules": ["hyprland/workspaces#left"],
    "orientation": "inherit"
  },
  "group/right-ws": {
    "modules": ["hyprland/workspaces#right"],
    "orientation": "inherit"
  },
  "group/system-stats": {
    "modules": ["cpu", "memory"],
    "orientation": "inherit"
  },
  "hyprland/workspaces#left": {
    "format": "{icon}",
    "format-icons": {
      "1": "1",
      "2": "2",
      "3": "3",
      "4": "4"
    },
    "sort-by-number": true,
    "show-special": false,
    "persistent-workspaces": {
      "*": [1, 2, 3, 4]
    }
  },
  "hyprland/workspaces#right": {
    "format": "{icon}",
    "format-icons": {
      "5": "5",
      "6": "6",
      "7": "7",
      "8": "8"
    },
    "sort-by-number": true,
    "show-special": false,
    "persistent-workspaces": {
      "*": [5, 6, 7, 8]
    }
  },
  "clock": {
    "format": "{:%H 󰇙 %M 󰇙 %S}",
    "format-alt": "{:%m 󰇙 %d 󰇙 %y}",
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "format": {
        "month": "<span color='#c3c8d0'><b>{}</b></span>",
        "weekdays": "<span color='#9e1a1a'><b>{}</b></span>",
        "today": "<span color='#d12b2b'><b>{}</b></span>"
      }
    },
    "interval": 1
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "󰎑",
      "deactivated": "󱧒"
    }
  },
  "cpu": {
    "interval": 2,
    "format": "   {usage}%",
    "on-click": "omarchy-launch-or-focus-tui btop",
    "on-click-right": "alacritty"
  },
  "memory": {
    "interval": 5,
    "format": "   {percentage}%",
    "tooltip-format": "{used:0.1f}G / {total:0.1f}G",
    "on-click": "omarchy-launch-or-focus-tui btop"
  },
  "network": {
    "format-wifi": "󰤨 {essid}",
    "format-ethernet": "󱫋",
    "format-disconnected": "󰤮 offline",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "omarchy-launch-wifi"
  },
  "bluetooth": {
    "format": "󰔩",
    "format-connected": "󰂱 {num_connections}",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "omarchy-launch-bluetooth"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "󰖁",
    "format-icons": ["󰫃", "󰫄", "󰫅", "󰫆", "󰫇", "󰫈"],
    "on-click": "omarchy-launch-audio",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "scroll-step": 5
  },
  "custom/screenrecording-indicator": {
    "on-click": "omarchy-cmd-screenrecord",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json"
  },
  "custom/net-gap": {
    "format": " ",
    "tooltip": false
  }
}
