{
  "layer": "top",
  "position": "top",
  "height": 38,
  "margin": 0,
  "spacing": 0,
  "modules-left": ["custom/omarchy", "hyprland/workspaces", "custom/left-blank"],
  "modules-center": ["clock"],
  "modules-right": ["custom/right-blank"],
  "custom/left-blank": {
    "format": " ",
    "tooltip": false
  },
  "custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>",
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },
  "hyprland/workspaces": {
    "format": "{id}",
    "sort-by-number": true,
    "show-special": false,
    "persistent-workspaces": {
      "*": [1, 2, 3, 4, 5, 6, 7, 8]
    }
  },
  "clock": {
    "format": "{:%H:%M:%S}",
    "interval": 1,
    "tooltip": false
  },
  "custom/right-blank": {
    "format": " ",
    "tooltip": false
  }
}
